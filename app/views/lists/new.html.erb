<h1 class="text-center my-4">Create a New List</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= simple_form_for @list do |f| %>
            <div class="mb-3">
              <%= f.input :name, label: "List Name", input_html: { class: "form-control", placeholder: "Enter a name for your list" } %>
            </div>
            <div class="text-center">
              <%= f.submit "Create List", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
